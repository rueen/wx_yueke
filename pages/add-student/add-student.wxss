/* 添加学员页面样式 */

.form-section {
  margin: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
}

.courses-counter {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 8rpx;
}

.counter-btn {
  width: 64rpx;
  height: 64rpx;
  background: #ffffff;
  border: 2rpx solid #e5e5e7;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #007AFF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
}

.counter-btn:disabled {
  opacity: 0.3;
  color: #86868b;
}

.counter-btn:active:not([disabled]) {
  background: #f0f0f0;
}

.counter-input {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin: 0 16rpx;
  background: transparent;
  border: none;
}

.submit-section {
  margin: 32rpx;
}

.tips-section {
  margin: 32rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 32rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #86868b;
  line-height: 1.6;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .form-section,
  .submit-section,
  .tips-section {
    margin: 24rpx;
    padding: 24rpx;
  }
  
  .counter-btn {
    width: 56rpx;
    height: 56rpx;
    font-size: 28rpx;
  }
} 