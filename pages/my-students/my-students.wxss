/* 我的学员页面样式 */

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.students-list {
  background: #f5f5f5;
}

.list {
  margin: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.list-item {
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f8f8;
}

.list-item-content {
  flex: 1;
  margin-left: 24rpx;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 28rpx;
  color: #86868b;
}

.student-actions {
  margin-right: 16rpx;
}

.list-item-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #c7c7cc;
  border-right: 2rpx solid #c7c7cc;
  transform: rotate(45deg);
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .page-header {
    padding: 24rpx;
  }
  
  .list {
    margin: 24rpx;
  }
  
  .list-item {
    padding: 24rpx;
  }
} 