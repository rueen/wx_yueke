/* 我的页面样式 */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #007AFF 0%, #5856D6 100%);
  margin: 32rpx;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #ffffff;
}

.user-phone {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 身份切换 */
.user-type-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.switch-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.switch-options {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 4rpx;
}

.switch-option {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.switch-option.active {
  background: rgba(255, 255, 255, 0.9);
  color: #007AFF;
}

.switch-option:not(.active) {
  color: rgba(255, 255, 255, 0.8);
}

/* 功能列表 */
.function-list {
  padding: 0 32rpx;
}

.function-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  color: #86868b;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
  font-weight: 500;
}

.list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.list-item {
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
  position: relative;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f8f8;
}

.item-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 8rpx;
  display: block;
}

.list-item-subtitle {
  font-size: 28rpx;
  color: #86868b;
  display: block;
}

.list-item-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #c7c7cc;
  border-right: 2rpx solid #c7c7cc;
  transform: rotate(45deg);
  margin-left: 16rpx;
}

.badge {
  position: absolute;
  top: 24rpx;
  right: 48rpx;
  background: #FF3B30;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
  line-height: 1;
  z-index: 1;
}

/* 退出登录区域 */
.logout-section {
  padding: 0 32rpx 64rpx;
  margin-top: 32rpx;
}

.logout-section .btn-outline {
  border-color: #FF3B30;
  color: #FF3B30;
}

.logout-section .btn-outline:active {
  background: #FF3B30;
  color: #ffffff;
}

/* 特殊图标样式 */
.list-item:nth-child(1) .item-icon {
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  color: #ffffff;
}

.list-item:nth-child(2) .item-icon {
  background: linear-gradient(135deg, #007AFF 0%, #5AC8FA 100%);
  color: #ffffff;
}

.list-item:nth-child(3) .item-icon {
  background: linear-gradient(135deg, #FF9500 0%, #FFCC02 100%);
  color: #ffffff;
}

.list-item:nth-child(4) .item-icon {
  background: linear-gradient(135deg, #5856D6 0%, #AF52DE 100%);
  color: #ffffff;
}

.list-item:nth-child(5) .item-icon {
  background: linear-gradient(135deg, #FF3B30 0%, #FF6482 100%);
  color: #ffffff;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .user-card {
    margin: 24rpx;
    padding: 32rpx 24rpx;
  }
  
  .function-list {
    padding: 0 24rpx;
  }
  
  .logout-section {
    padding: 0 24rpx 48rpx;
  }
  
  .list-item {
    padding: 24rpx;
  }
  
  .item-icon {
    width: 56rpx;
    height: 56rpx;
    font-size: 28rpx;
    margin-right: 20rpx;
  }
} 