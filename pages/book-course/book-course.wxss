/* 发起约课页面样式 */ 

/* 约课页面样式 */
.container {
  padding: 0;
  background: #f7f7f7;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  padding: 40rpx;
  text-align: center;
  color: #999;
}

/* 表单容器 */
.booking-form {
  padding-bottom: 200rpx;
}

/* 表单区块 */
.form-section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

/* 用户列表 */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  position: relative;
  transition: all 0.3s ease;
}

.user-item.selected {
  background: rgba(0, 122, 255, 0.1);
  border: 2rpx solid #007AFF;
}

.user-item .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.user-item .user-info {
  flex: 1;
}

.user-item .user-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-item .user-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.select-icon {
  color: #007AFF;
  font-size: 36rpx;
  font-weight: bold;
}

/* 已选用户 */
.selected-user {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.selected-user .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.selected-user .user-info {
  flex: 1;
}

.selected-user .user-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.selected-user .user-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 时间选择器组 */
.time-picker-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-value {
  font-size: 28rpx;
  color: #666;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  min-width: 200rpx;
  text-align: center;
}

/* 输入组 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007AFF;
  background: #fff;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #007AFF;
  background: #fff;
}

/* 约课预览 */
.booking-preview {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.05), rgba(0, 122, 255, 0.1));
  border: 1rpx solid rgba(0, 122, 255, 0.2);
  border-radius: 12rpx;
  padding: 24rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-label {
  font-size: 26rpx;
  color: #666;
  min-width: 100rpx;
}

.preview-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 提交区域 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.btn {
  padding: 24rpx 40rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #007AFF;
  color: #fff;
}

.btn-primary:active {
  background: #0051D5;
}

.btn-block {
  width: 100%;
}

.btn-disabled {
  background: #ccc !important;
  color: #666 !important;
}

/* 温馨提示 */
.tips-section {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
} 