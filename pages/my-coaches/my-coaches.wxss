/* 我的教练页面样式 */

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.coaches-list {
  background: #f5f5f5;
}

.list {
  margin: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.list-item {
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f8f8;
}

.list-item-content {
  flex: 1;
  margin-left: 24rpx;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 28rpx;
  color: #86868b;
  margin-bottom: 8rpx;
}

.coach-time {
  margin-top: 8rpx;
}

.time-label {
  font-size: 24rpx;
  color: #86868b;
}

.time-text {
  font-size: 24rpx;
  color: #007AFF;
  background: #f0f8ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

.coach-actions {
  margin: 0 16rpx 0 0;
  align-self: center;
}

.list-item-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #c7c7cc;
  border-right: 2rpx solid #c7c7cc;
  transform: rotate(45deg);
  align-self: center;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .page-header {
    padding: 24rpx;
  }
  
  .list {
    margin: 24rpx;
  }
  
  .list-item {
    padding: 24rpx;
  }
} 