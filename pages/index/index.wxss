/* 首页样式 */
.container {
  padding: 0;
  background: #f7f7f7;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: #ffffff;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.greeting {
  flex: 1;
}

.greeting-text {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  margin-bottom: 8rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.header-actions {
  margin-left: 24rpx;
}

.quick-book-btn {
  background: #007AFF;
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.quick-book-btn:active {
  background: #0056CC;
  transform: scale(0.95);
}

/* 课程区域 */
.courses-section {
  padding: 32rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.section-subtitle {
  display: block;
  font-size: 24rpx;
  color: #86868b;
}

/* 课程卡片 */
.courses-list {
  margin-bottom: 32rpx;
}

.course-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.course-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.course-time {
  flex: 1;
}

.time-date {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 4rpx;
}

.time-period {
  display: block;
  font-size: 28rpx;
  color: #86868b;
}

.course-status {
  margin-left: 24rpx;
}

.status {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-pending .status-dot {
  background: #ffc107;
}

.status-confirmed {
  background: #d4edda;
  color: #155724;
}

.status-confirmed .status-dot {
  background: #28a745;
}

.status-completed {
  background: #cce5ff;
  color: #004085;
}

.status-completed .status-dot {
  background: #007bff;
}

.status-cancelled {
  background: #f8d7da;
  color: #721c24;
}

.status-cancelled .status-dot {
  background: #dc3545;
}

/* 课程内容 */
.course-content {
  margin-bottom: 24rpx;
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, #007AFF, #5856D6);
  color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-type {
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.user-greeting {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 课程元信息 */
.course-meta {
  margin-top: 16rpx;
}

.location {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 28rpx;
  color: #86868b;
}

.remark {
  margin-top: 8rpx;
}

.remark-text {
  font-size: 28rpx;
  color: #86868b;
  background: #f8f8f8;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 课程操作 */
.course-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 快捷操作 */
.quick-actions {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.action-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.action-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.badge {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #FF3B30;
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  min-width: 40rpx;
  text-align: center;
}

/* 区块样式 */
.section {
  background: #fff;
  margin: 20rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #007AFF;
}

/* 课程列表 */
.course-list {
  padding: 0 30rpx 30rpx;
}

.course-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.course-item:last-child {
  margin-bottom: 0;
}

.course-time {
  margin-right: 24rpx;
  min-width: 120rpx;
}

.course-date {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.course-time-range {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.course-info {
  flex: 1;
}

.course-partner {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.course-location {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.course-status {
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  color: #fff;
}

.status-scheduled {
  background: #007AFF;
}

.status-ongoing {
  background: #34C759;
}

.status-completed {
  background: #8E8E93;
}

.status-cancelled {
  background: #FF3B30;
}

/* 用户网格 */
.user-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.user-card {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-card .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 12rpx;
}

.user-card .user-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.user-card .user-courses {
  font-size: 22rpx;
  color: #666;
  display: block;
}

/* 空状态 */
.empty-state {
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-state-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.empty-state-action {
  margin-top: 30rpx;
}

/* 按钮样式 */
.btn {
  padding: 20rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

.btn-primary {
  background: #007AFF;
  color: #fff;
}

.btn-primary:active {
  background: #0051D5;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .page-header {
    padding: 24rpx;
  }
  
  .courses-section {
    padding: 24rpx;
  }
  
  .course-card {
    padding: 24rpx;
  }
  
  .quick-actions {
    margin: 0 24rpx 24rpx;
    padding: 24rpx;
  }
} 