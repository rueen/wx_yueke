/* 首页样式 */
.container {
  padding: 0;
  background: #f5f5f5;
}

/* 页面头部 */
.page-header {
  background: #ffffff;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.greeting {
  flex: 1;
}

.greeting-text {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  margin-bottom: 8rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.header-actions {
  margin-left: 24rpx;
}

.quick-book-btn {
  background: #007AFF;
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.quick-book-btn:active {
  background: #0056CC;
  transform: scale(0.95);
}

/* 课程区域 */
.courses-section {
  padding: 32rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.section-subtitle {
  display: block;
  font-size: 24rpx;
  color: #86868b;
}

/* 课程卡片 */
.courses-list {
  margin-bottom: 32rpx;
}

.course-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.course-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.course-time {
  flex: 1;
}

.time-date {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 4rpx;
}

.time-period {
  display: block;
  font-size: 28rpx;
  color: #86868b;
}

.course-status {
  margin-left: 24rpx;
}

.status {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-pending .status-dot {
  background: #ffc107;
}

.status-confirmed {
  background: #d4edda;
  color: #155724;
}

.status-confirmed .status-dot {
  background: #28a745;
}

.status-completed {
  background: #cce5ff;
  color: #004085;
}

.status-completed .status-dot {
  background: #007bff;
}

.status-cancelled {
  background: #f8d7da;
  color: #721c24;
}

.status-cancelled .status-dot {
  background: #dc3545;
}

/* 课程内容 */
.course-content {
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 4rpx;
}

.user-role {
  display: block;
  font-size: 24rpx;
  color: #86868b;
}

/* 课程元信息 */
.course-meta {
  margin-top: 16rpx;
}

.location {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 28rpx;
  color: #86868b;
}

.remark {
  margin-top: 8rpx;
}

.remark-text {
  font-size: 28rpx;
  color: #86868b;
  background: #f8f8f8;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 课程操作 */
.course-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 快速操作 */
.quick-actions {
  background: #ffffff;
  margin: 0 32rpx 32rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 16rpx;
  border-radius: 16rpx;
  transition: background-color 0.3s ease;
}

.quick-action-item:active {
  background: #f8f8f8;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  height: 56rpx;
  line-height: 56rpx;
}

.action-text {
  font-size: 24rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #FF3B30;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
  line-height: 1;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #86868b;
}

.empty-state-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-state-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  color: #1d1d1f;
}

.empty-state-subtitle {
  font-size: 28rpx;
  color: #86868b;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 48rpx;
  color: #86868b;
  font-size: 28rpx;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .page-header {
    padding: 24rpx;
  }
  
  .courses-section {
    padding: 24rpx;
  }
  
  .course-card {
    padding: 24rpx;
  }
  
  .quick-actions {
    margin: 0 24rpx 24rpx;
    padding: 24rpx;
  }
} 