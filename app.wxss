/**
 * 约课小程序全局样式
 * 采用Apple简洁优雅的设计风格
 */

/* 全局重置样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: #1d1d1f;
  line-height: 1.4;
}

/* 容器样式 */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

.content-container {
  padding: 0 32rpx;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-content {
  padding: 32rpx;
}

.card-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-footer {
  padding: 16rpx 32rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 按钮样式 */
.btn {
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx 48rpx;
  border: none;
  outline: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #007AFF;
  color: #ffffff;
}

.btn-primary:active {
  background: #0056CC;
}

.btn-secondary {
  background: #f0f0f0;
  color: #1d1d1f;
}

.btn-secondary:active {
  background: #e0e0e0;
}

.btn-danger {
  background: #FF3B30;
  color: #ffffff;
}

.btn-danger:active {
  background: #D70015;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #007AFF;
  color: #007AFF;
}

.btn-outline:active {
  background: #007AFF;
  color: #ffffff;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

.btn-large {
  padding: 32rpx 64rpx;
  font-size: 36rpx;
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-disabled {
  opacity: 0.3;
  pointer-events: none;
}

/* 列表样式 */
.list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.list-item {
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f8f8;
}

.list-item-content {
  flex: 1;
  margin-left: 24rpx;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 28rpx;
  color: #86868b;
}

.list-item-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #c7c7cc;
  border-right: 2rpx solid #c7c7cc;
  transform: rotate(45deg);
  margin-left: 16rpx;
}

/* 头像样式 */
.avatar {
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
}

.avatar-small {
  width: 64rpx;
  height: 64rpx;
}

.avatar-medium {
  width: 96rpx;
  height: 96rpx;
}

.avatar-large {
  width: 128rpx;
  height: 128rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
}

.tag-primary {
  background: #007AFF;
  color: #ffffff;
}

.tag-secondary {
  background: #f0f0f0;
  color: #1d1d1f;
}

.tag-success {
  background: #34C759;
  color: #ffffff;
}

.tag-warning {
  background: #FF9500;
  color: #ffffff;
}

.tag-danger {
  background: #FF3B30;
  color: #ffffff;
}

/* 状态样式 */
.status {
  display: inline-flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-pending .status-dot {
  background: #FF9500;
}

.status-confirmed .status-dot {
  background: #34C759;
}

.status-completed .status-dot {
  background: #007AFF;
}

.status-cancelled .status-dot {
  background: #FF3B30;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #1d1d1f;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #ffffff;
  transition: border-color 0.3s ease;
}

.input:focus {
  border-color: #007AFF;
}

.textarea {
  min-height: 160rpx;
  resize: vertical;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #86868b;
}

.empty-state-icon {
  width: 96rpx;
  height: 96rpx;
  margin: 0 auto 32rpx;
  opacity: 0.3;
}

.empty-state-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.empty-state-subtitle {
  font-size: 28rpx;
  margin-bottom: 48rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 48rpx;
  color: #86868b;
}

/* 工具类 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: 600;
}

.text-small {
  font-size: 24rpx;
}

.text-large {
  font-size: 36rpx;
}

.text-primary {
  color: #007AFF;
}

.text-secondary {
  color: #86868b;
}

.text-success {
  color: #34C759;
}

.text-warning {
  color: #FF9500;
}

.text-danger {
  color: #FF3B30;
}

.margin-top {
  margin-top: 32rpx;
}

.margin-bottom {
  margin-bottom: 32rpx;
}

.margin-left {
  margin-left: 16rpx;
}

.margin-right {
  margin-right: 16rpx;
}

.padding {
  padding: 32rpx;
}

.no-border {
  border: none !important;
}

/* 导航栏样式 */
.navbar {
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 页面标题 */
.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin: 32rpx 0 24rpx;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 24rpx;
  }
  
  .card-content {
    padding: 24rpx;
  }
} 